<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <technited.dota2central.CircularImageView 
        android:id="@+id/friendsRowImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
    
    <TextView 
        android:id="@+id/friendsRowName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/friendsRowImage"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:maxWidth="150dp"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/friendsRowState"/>
    
    <TextView
        android:id="@+id/friendsRowState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:layout_centerVertical="true"/>
    

</RelativeLayout>
